    </div>


    <!--Create comment button-->
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <input class="btn btn-info m-1 js-useraction" type='button' id='hideshow' value='Comment'>
        <div id="createComment">
        </div>
    }

    <!--Coments-->
    @*_PostComments.cshtml*@
    <div id="postComments">
    </div>

    <div class="modal-footer">
        @Html.HiddenFor(x=>x.Id)
        @if (User.Identity != null && (User.Identity.Name == Model.AuthorsName 
        || (await authService.AuthorizeAsync(User, "AdminPolicy")).Succeeded))
        {
            <a onclick="editInPopup('@Url.Action("Update","Post",new {id = @Model.Id}, Context.Request.Scheme)')"
