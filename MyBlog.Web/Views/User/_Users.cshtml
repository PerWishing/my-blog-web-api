@using MyBlog.Web.ViewModels.User
@model List<UserViewModel>
@{
}

@if (Model.Count() > 0)
{
    <input type="hidden" value="@ViewBag.CurrentPage" id="currentUserPageHidden" />
    <div class="my-1">
        Current Page: @ViewBag.CurrentPage / @ViewBag.PageCount
        @if ((int)ViewBag.CurrentPage > 1)
        {
            <button class="btn btn-primary js-users-prevPageForUserBtn" data-next-page="@((int)ViewBag.CurrentPage - 1)">
                Previous
            </button>
        }
        @if ((int)ViewBag.CurrentPage < (int)ViewBag.PageCount)
        {
            <button class="btn btn-primary js-users-nextPageForUserBtn" data-next-page="@((int)ViewBag.CurrentPage + 1)">
                Next
            </button>
        }
    </div>
    <div class="row justify-content-md-center">
        @foreach (var r in Model)
        {
            <div class="col-sm-8 col-md-8 mb-3" style="max-width: 540px;">
                @await Html.PartialAsync("_UserBigPartial", r)
            </div>
        }
    </div>
}
else
{
    <p>
        There are no users.
    </p>
}